<?xml version="1.0" encoding="UTF-8"?>
<Template>
	<TemplateConfiguration>
		<_Name>Gtk3 Windows (Glade)</_Name>
		<_Category>Gtk3</_Category>
		<LanguageName>C#</LanguageName>
		<_Description>Creates a new Gtk# 3.0 Windows class using Glade.</_Description>
		<DefaultFilename>Gtk3Window</DefaultFilename>
	</TemplateConfiguration>
	<TemplateFiles>
		<File name="${Name}.glade" src="Shared/Windows.glade" BuildAction="EmbeddedResource"/>
		<File name="${Name}.glade.cs" src="Shared/Windows.glade.cs" AddStandardHeader="true" DependsOn="${Name}.glade"/>
	</TemplateFiles>
</Template>
